{
  "daemon": true,
  "run": [
    {
      "method": "shell.run",
      "params": {
        "path": "app",
        "venv": "venv",
        "chain": true,
        "env": {},
        "input": null,
        "message": [
          "python demo/vibevoice_realtime_demo.py --device {{gpu === 'apple' ? 'mps' : (gpu === 'nvidia' ? 'cuda' : 'cpu')}}"
        ],
        "on": [
          {
            "event": "/http://\\S+/",
            "done": true
          }
        ]
      }
    },
    {
      "when": "{{input && input.event && Array.isArray(input.event) && input.event.length > 0}}",
      "method": "local.set",
      "params": {
        "url": "{{input.event[0]}}"
      }
    }
  ]
}
